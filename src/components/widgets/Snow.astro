---
import { Alert, AlertDescription } from "@/components/starwind/alert";
---

<Alert id="top-alert" variant="error" class="hidden">
	<AlertDescription>
		Happy Holidays and have a wonderful New Year!
	</AlertDescription>
</Alert>

<style>
	body.snow {
		background: #fefefe url("/snowf.svg");
		background-size: auto;
		background-attachment: fixed;

		#top-alert {
			display: block;
		}
	}
</style>

<script>
	import { SnowStorm } from "@/lib/snowstorm";

	document.addEventListener("DOMContentLoaded", () => {
		var dt = new Date();
		var m = dt.getMonth();
		var d = dt.getDate();

		if ((m == 0 && d <= 2) || (m == 11 && d >= 30)) {
			document.body.classList.add("snow");

			const snow = new SnowStorm({
				followMouse: false,
				useGPU: true,
				excludeMobile: false,
				zIndex: 999,
			});

			snow.start();
		}
	});
</script>
