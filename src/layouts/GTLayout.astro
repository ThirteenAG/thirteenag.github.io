---
import OLLayout from "./OLLayout.astro";
import { getEntry } from "astro:content";

interface Props {
	selectedEntryId: string;
}

const { selectedEntryId } = Astro.props as Props;

const selectedEntry = await getEntry("gt", selectedEntryId);

if (!selectedEntry) {
	return;
}

const navigation = [
	{ title: "GTA One Liners", href: "/gol/" },
	{ title: "Movie One Liners", href: "/mol/" },
	{ title: "Widescreen Fixes Pack", href: "/wfp/" },
	{
		title: "Donate with PayPal",
		href: "https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=77JMVFE8N42PE",
	},
];
---

<OLLayout
	id="gt"
	title="GTA Text"
	description="GTA text searcher"
	favicon="/gt.svg"
	{selectedEntry}
	{navigation}
/>

<style>
	body {
		background: url("/images/razor.jpg") no-repeat top center fixed;
		background-size: cover;
	}
</style>
